# ==============================================
# SLA Digital Unified Platform - Development Configuration
# ==============================================

# ==============================================
# APPLICATION SETTINGS
# ==============================================
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
APP_VERSION=1.0.0

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL Database Configuration
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=sla_platform_dev
DB_HOST=localhost
DB_PORT=5432

# Alternative: Use DATABASE_URL instead of individual settings
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/sla_platform_dev

# Database connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Enable/disable database auto-sync (not recommended for production)
DB_AUTO_SYNC=false

# Enable database logging in development
DB_LOGGING=true

# ==============================================
# REDIS CONFIGURATION
# ==============================================
# Redis URL for caching and sessions
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache TTL settings (in seconds)
CACHE_TTL_OPERATORS=300
CACHE_TTL_SUBSCRIPTIONS=60
CACHE_TTL_HEALTH=300

# ==============================================
# SLA DIGITAL API CONFIGURATION
# ==============================================
# SLA Digital API base URL
SLA_API_BASE_URL=https://api.sla-alacrity.com

# SLA Digital API Credentials (HTTP Basic Auth) - SANDBOX
SLA_API_USERNAME=sandbox_user
SLA_API_PASSWORD=sandbox_pass

# IP Whitelisting (CIDR format, comma-separated)
# For development, you may need to add your local IP
SLA_API_WHITELISTED_IPS=127.0.0.1/32

# Default environment for operators
SLA_DEFAULT_ENVIRONMENT=sandbox

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================
# JWT Secret for token signing (use a strong random string)
JWT_SECRET=dev-jwt-secret-change-this-in-production-2024
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption key for sensitive data (32 characters)
ENCRYPTION_KEY=dev-encryption-key-32-chars-long!!

# Password hashing rounds (bcrypt)
BCRYPT_ROUNDS=10

# Session settings
SESSION_TIMEOUT=24h
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_TIME=15m

# ==============================================
# NEW RELIC MONITORING (DISABLED FOR DEV)
# ==============================================
# New Relic license key (leave empty for development)
NEW_RELIC_LICENSE_KEY=

# New Relic application name
NEW_RELIC_APP_NAME=SLA Digital Unified Platform - Dev

# Enable/disable New Relic (disable for development)
NEW_RELIC_ENABLED=false

# New Relic log level
NEW_RELIC_LOG_LEVEL=info

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
# Log level (error, warn, info, debug)
LOG_LEVEL=debug

# Log format (json, simple)
LOG_FORMAT=json

# Enable request logging
LOG_REQUESTS=true

# Enable file logging (disable for development to avoid clutter)
LOG_FILE_ENABLED=false

# Log file settings (if enabled)
LOG_FILE_MAX_SIZE=20m
LOG_FILE_MAX_FILES=14d

# ==============================================
# HEALTH MONITORING
# ==============================================
# Health check interval (in minutes)
HEALTH_CHECK_INTERVAL=5

# Health score thresholds
HEALTH_SCORE_WARNING=0.7
HEALTH_SCORE_CRITICAL=0.5

# Health check timeout (in milliseconds)
HEALTH_CHECK_TIMEOUT=30000

# ==============================================
# RATE LIMITING
# ==============================================
# Rate limit window (in milliseconds)
RATE_LIMIT_WINDOW=900000

# Max requests per window
RATE_LIMIT_MAX=1000

# API-specific rate limits (higher for development)
RATE_LIMIT_API_MAX=5000
RATE_LIMIT_ADMIN_MAX=1000

# ==============================================
# OPERATOR-SPECIFIC SETTINGS
# ==============================================
# Default timeouts (in milliseconds)
OPERATOR_REQUEST_TIMEOUT=30000
OPERATOR_CONNECTION_TIMEOUT=10000

# Retry settings
OPERATOR_MAX_RETRIES=3
OPERATOR_RETRY_DELAY=1000

# Webhook settings
WEBHOOK_TIMEOUT=10000
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_INTERVAL=4h

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
# Enable debug mode
DEBUG=true

# Mock external APIs in development (useful for offline development)
MOCK_SLA_API=false

# Seed database on startup
AUTO_SEED=true

# Enable API documentation
ENABLE_API_DOCS=true

# Enable detailed error messages in development
DETAILED_ERRORS=true

# ==============================================
# ZAIN BAHRAIN DEVELOPMENT CONFIG
# ==============================================
# Zain Bahrain specific settings for testing
ZAIN_BH_ENDPOINT=https://api.sla-alacrity.com
ZAIN_BH_CURRENCY=BHD
ZAIN_BH_MAX_AMOUNT=50.0
ZAIN_BH_DAILY_LIMIT=10.0
ZAIN_BH_PIN_LENGTH=5