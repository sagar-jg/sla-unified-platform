{
  "name": "sla-digital-unified-backend",
  "version": "1.0.0",
  "description": "Unified Node.js backend for SLA Digital telecom operator integration",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "setup": "node scripts/setup-database.js",
    "setup:force": "npm run setup && npm run migrate",
    "check": "node scripts/check-dependencies.js",
    "prestart": "npm run check",
    "predev": "npm run check",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "jest --config jest.e2e.config.js",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",
    "migrate:status": "npx sequelize-cli db:migrate:status",
    "seed": "npx sequelize-cli db:seed:all",
    "seed:undo": "npx sequelize-cli db:seed:undo:all",
    "db:create": "npx sequelize-cli db:create",
    "db:drop": "npx sequelize-cli db:drop",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "build": "echo 'No build step required for Node.js'",
    "docker:build": "docker build -t sla-digital-backend .",
    "docker:run": "docker run -p 3001:3001 sla-digital-backend",
    "health": "curl -s http://localhost:3001/health | jq",
    "health:detailed": "curl -s http://localhost:3001/health/detailed | jq"
  },
  "keywords": [
    "sla-digital",
    "telecom",
    "operator",
    "unified-platform",
    "nodejs",
    "express",
    "postgresql",
    "redis"
  ],
  "author": "SLA Digital Platform Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.21.1",
    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "compression": "^1.7.5",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^11.0.3",
    "axios": "^1.7.7",
    "sequelize": "^6.37.5",
    "pg": "^8.13.1",
    "pg-hstore": "^2.3.4",
    "redis": "^4.7.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "newrelic": "^12.6.0",
    "dotenv": "^16.4.5",
    "crypto-js": "^4.2.0",
    "joi": "^17.13.3",
    "moment": "^2.30.1",
    "node-cron": "^3.0.3",
    "express-async-errors": "^3.1.1",
    "multer": "^1.4.5-lts.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.7",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.6.0",
    "prettier": "^3.3.3",
    "sequelize-cli": "^6.6.2",
    "@types/jest": "^29.5.14",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sagar-jg/sla-digital-unified-platform.git"
  },
  "bugs": {
    "url": "https://github.com/sagar-jg/sla-digital-unified-platform/issues"
  },
  "homepage": "https://github.com/sagar-jg/sla-digital-unified-platform#readme"
}